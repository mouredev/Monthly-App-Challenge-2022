                app:layout_constraintStart_toStartOf="@id/ivoferta"
                app:layout_constraintEnd_toEndOf="@id/ivoferta"
                app:layout_constraintBottom_toBottomOf="@id/ivoferta"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>